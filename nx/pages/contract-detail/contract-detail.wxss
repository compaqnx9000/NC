.animation-clockwise {
  width: 100rpx;
  height: 100rpx;
  background-color: orange;
  animation-name: clockwise; /*动画的名称 */
  animation-duration: 2000ms; /*动画从开始到结束的时间*/
  animation-timing-function: linear; /*动画执行快慢的参数*/
  animation-iteration-count: infinite; /*动画执行多少次的参数*//*以下是兼容ios所需，参数意义与上相同*/
  -webkit-animation-name: clockwise;
  -webkit-animation-duration: 2000ms;
  -webkit-animation-timing-function: linear;
  -webkit-animation-iteration-count: infinite;
}

@keyframes clockwise {
  /*开始转的角度*/

  from {
    transform: rotate(0deg);
  }/*结束的角度*/

  to {
    transform: rotate(360deg);
  }
}

/*兼容ios*/

@-webkit-keyframes clockwise {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

.animation-anticlockwise {
  width: 100rpx;
  height: 100rpx;
  background-color: orange;
  animation-name: anticlockwise; /*动画的名称 */
  animation-duration: 2000ms; /*动画从开始到结束的时间*/
  animation-timing-function: linear; /*动画执行快慢的参数*/
  animation-iteration-count: infinite; /*动画执行多少次的参数*//*以下是兼容ios所需，参数意义与上相同*/
  -webkit-animation-name: anticlockwise;
  -webkit-animation-duration: 2000ms;
  -webkit-animation-timing-function: linear;
  -webkit-animation-iteration-count: infinite;
}

@keyframes anticlockwise {
  /*开始转的角度*/

  from {
    transform: rotate(360deg);
  }/*结束的角度*/

  to {
    transform: rotate(0deg);
  }
}

/*兼容ios*/

@-webkit-keyframes anticlockwise {
  from {
    transform: rotate(360deg);
  }

  to {
    transform: rotate(0deg);
  }
}

