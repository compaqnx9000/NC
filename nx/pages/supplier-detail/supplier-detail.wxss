/* 实现textarea高度自适应 */

.detail-view {
  display: block;
  justify-content: center;
  align-items: center;
  /* 用于重叠 *//* position: relative; */
  margin: 40rpx 20rpx;
  min-height: 80rpx;
  border-top:1rpx solid #f5f5f5;
}

.detail-placeholder {
  /* 用于重叠 */
  position: absolute;
  /* 用于与textarea的光标起始位置对齐 */
  padding: 0 10rpx;
  min-height: 100%;
  color: #c9c9c9;
  font-size: 28rpx;
}

.detail-view .detail-textarea {
  display: inline-block;
  /* 用于顶部与text对齐 *//* top: -12rpx; */
  width: 550rpx;
  font-size: 28rpx;
  /* border-top: 1rpx solid #cfe8e9; *//* border: 1rpx solid #cfe8e9; */
  height: 20px;
  /* background: #ff0000; */
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  background: #f4f5f6;
}

.detail-view button {
  display: inline-block;
  width: 100rpx;
  margin-top: 20rpx;
  font-size: 22rpx;
}

.mask {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100%;
  position: fixed;
  /* background-color: #000; */
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 99;
  top: 0;
  left: 0;
  /* opacity: 0.5; */
}

.op-comment {
  background-color: #fff;
  width: 80%;
  height: 80rpx;
  margin: 300rpx 0;
  /* opacity: 1; */
  z-index: 999;
}
