.container {
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  position: relative;
}

.board {
  position: absolute;
  top: 444rpx;
  left: 80rpx;
  /* border: 1rpx solid #f00; */
  width: 78%;
  height: 470rpx;
  border-radius: 25rpx;
  background-color: #fff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
}

.border {
  display: flex;
  width: 100%;
  padding: 20rpx 10rpx;
}

.dividing-line {
  height: 1px;
  border: none;
  border-top: 1px solid #eceeef;
  margin-left: 190rpx;
  margin-right: 80rpx;
}

.new-item {
  display: flex;
  height: 174rpx;
  flex-direction: column;
  background-color: #f7f9fb;
}

.new-item-top {
  display: flex;
  flex-direction: row;
  height: 170rpx;
}

.new-item-left {
  display: flex;
  flex-direction: column;
  /* padding: 80rpx 100rpx; */
}

.new-item-right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 20rpx, 0rpx;
}

.new-item-title {
  font-family: "PingFangSC-Medium";
  font-size: 32rpx;
  font-weight: 800;
  color: #3b445a;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 500rpx;
  padding-left: 34rpx;
}

